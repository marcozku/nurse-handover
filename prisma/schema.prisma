// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  bedNumber String   @map("bed_number")
  mrn       String?  @unique // Medical Record Number
  age       Int?
  gender    String?
  
  // Medical Info
  diagnosis String?
  allergies String[] // Array of drug allergies
  
  // Medications
  medications Medication[]
  
  // Handover Info
  handovers Handover[]
  
  // Version History
  versions PatientVersion[]
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("patients")
}

model PatientVersion {
  id          String   @id @default(cuid())
  patientId   String   @map("patient_id")
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  // Snapshot of patient data at this version
  data        Json     // Complete patient data snapshot
  
  // Change metadata
  shift       String   // AM, PM, Night
  changedBy   String   @map("changed_by") // Nurse name
  changeType  String   @map("change_type") // created, updated, deleted
  changes     Json?    // Specific fields changed (diff)
  
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("patient_versions")
  @@index([patientId, createdAt])
}

model Medication {
  id          String   @id @default(cuid())
  patientId   String   @map("patient_id")
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  name        String
  dosage      String
  frequency   String
  route       String?  // oral, IV, IM, etc.
  isPrivate   Boolean  @default(false) @map("is_private") // Private medication flag
  
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("medications")
}

model Handover {
  id          String   @id @default(cuid())
  patientId   String   @map("patient_id")
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  
  shift       String   // AM, PM, Night
  date        DateTime
  
  // Handover Details
  vitalSigns  String?  @map("vital_signs")
  assessment  String?
  plan        String?
  concerns    String?
  
  // Nurse Info
  nurseFrom   String?  @map("nurse_from")
  nurseTo     String?  @map("nurse_to")
  
  // Version History
  versions HandoverVersion[]
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  @@map("handovers")
}

model HandoverVersion {
  id          String   @id @default(cuid())
  handoverId  String   @map("handover_id")
  handover    Handover @relation(fields: [handoverId], references: [id], onDelete: Cascade)
  
  // Snapshot of handover data at this version
  data        Json     // Complete handover data snapshot
  
  // Change metadata
  shift       String   // AM, PM, Night
  changedBy   String   @map("changed_by") // Nurse name
  changeType  String   @map("change_type") // created, updated, deleted
  changes     Json?    // Specific fields changed (diff)
  
  createdAt   DateTime @default(now()) @map("created_at")
  
  @@map("handover_versions")
  @@index([handoverId, createdAt])
}

model UserSettings {
  id                    String   @id @default(cuid())
  userId                String   @unique @map("user_id") // Nurse ID or username
  
  // Display Settings
  showVersionHistory    Boolean  @default(true) @map("show_version_history")
  showShiftColors       Boolean  @default(true) @map("show_shift_colors")
  highlightChanges      Boolean  @default(true) @map("highlight_changes")
  compactMode           Boolean  @default(false) @map("compact_mode")
  
  // Notification Settings
  notifyOnChanges       Boolean  @default(true) @map("notify_on_changes")
  
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
  
  @@map("user_settings")
}
